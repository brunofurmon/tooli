{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "baseUrl": ".",
    "paths": {
      "@tooli/audio-system": ["libs/audio-system/src/index.ts"],
      "@tooli/history-tracker": ["libs/history-tracker/src/index.ts"],
      "@tooli/shared-ui": ["libs/shared-ui/src/index.ts"],
      "@tooli/user-management": ["libs/user-management/src/index.ts"],
      "@tooli/wheel-engine": ["libs/wheel-engine/src/index.ts"]
    }
  }
}
